<div class="form-group form-report-date" id="form-mes" data-bind="fadeVisible:IsMonthDate()" style="display:none">
    <label>Mês</label>
    <div class="form-group fa fa-calendar" aria-hidden="true">
        <input class="form-control" placeholder="" id="MonthDate" data-bind="value: MonthDate,datePicker: MonthDate, datePickerFormat: 'MM/YYYY', datePickerViewMode: 'months'" />
    </div>
</div>
<div class="form-group form-report-date" id="form-ultimos" data-bind="fadeVisible:IsLastDate()">
    <label>Últimos</label>
    <div class="form-group form-report-date">
        <input id="LastDate" class="form-control" placeholder="" data-bind="value:LastDate" />
        <select class="form-control" data-bind="value:LastType, bootstrapSelect: LastType">
            <option value="y">Anos</option>
            <option value="m">Meses</option>
            <option value="d">Dias</option>
        </select>
    </div>
</div>