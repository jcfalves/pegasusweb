<div class="form-group form-report-date" id="form-intervalo" data-bind="fadeVisible:IsCustomDate()">
    <label>Intervalo</label>
    <div>
        <div class="form-group fa fa-calendar" aria-hidden="true">
            <input class="form-control datepicker" placeholder="" id="StartDate" data-bind="value: StartDate,datePicker: StartDate" />
        </div>
    </div>
    <div>
        <label class="lblIntervalo">até</label>
        <div class="form-group fa fa-calendar" aria-hidden="true">
            <input class="form-control datepicker" placeholder="" id="EndDate" data-bind="value: EndDate,datePicker: EndDate" />
        </div>
    </div>
</div>

<div class="form-group form-report-date" id="form-ano" data-bind="fadeVisible:IsYearDate()" style="display:none">
    <label>Ano</label>
    <select class="form-control miniselect" data-bind="value:YearDate, bootstrapSelect: YearDate">
        @{
            var listYear = (List<string>)ViewData["YearMoviment"];

            if (listYear!=null)
            {
                foreach (var items in listYear)
                {
                    <option value="@items">@items</option>
                }
            }
        }
    </select>
        
</div>
<div class="form-group form-report-date" id="form-trimestre" data-bind="fadeVisible:IsCropDate()" style="display:none">
    <label>Safra</label>
    <select class="form-control miniselect" data-bind="value:CropDate, bootstrapSelect: CropDate">
        @{
            var listYearYear = (List<string>)ViewData["YearYearMoviment"];

            if (listYearYear != null)
            {
                foreach (var items in listYearYear)
                {
                    var valueOption = items.Split("/")[1];

                    <option value="@valueOption">@items</option>
                }
            }
        }
    </select>
</div>
