@model Bayer.Pegasus.Web.Models.GenericReportModel

@{
    var showAbaFilter = true;
    var showAbaHistory = true;
    var showLabelCFOP = false;
    var showAbaFilterHC = false;
    var showAbaPrice = false;

    if (Model != null)
    {
        showAbaFilter = Model.ShowFilter;
        showAbaHistory = Model.ShowHistory;
        showLabelCFOP = Model.ShowLabelCFOP;
        showAbaFilterHC = Model.ShowAbaFilterHC;
        showAbaPrice = Model.ShowAbaPrice;
    }

}

<div id="headerFiltro">
    <div class="row">
        <div class="col-lg-12">
            <h1 id="titleHeader" class="page-header">
                @ViewData["Title"]
                @if (showLabelCFOP)
                {
                    <span>Os dados consideram as CFOPs da Política de Distribuição e Campanhas,  e o preço informado na nota fiscal.</span>
                }
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div id="tabs-panel">
            @if (showAbaHistory)
            {
                <div class="tab" data-open="ultimas-analises">
                    Últimas Análises
                </div>
            }
            @if (showAbaFilter)
            {
                <div class="tab active" data-open="filtro-consulta">
                    Filtro de Consulta
                </div>
            }
            @if (showAbaPrice)
            {
                <div class="tab" data-open="ultimas-analises">
                    Price
                </div>
            }
            @if (showAbaFilterHC)
            {
                <div class="tab active" data-open="filtro-consulta">
                    Data Quality
                </div>
            }

        </div>
    </div>    
    <!-- /.row -->
</div>